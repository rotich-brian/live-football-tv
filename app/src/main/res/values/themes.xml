<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiveFootballTV" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LiveFootballTV.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActiveIndicatorStyle">
        <item name="android:background">@drawable/custom_indicator</item> <!-- Set the color -->
        <item name="android:height">5dp</item> <!-- Set the height -->
        <item name="android:width">10dp</item> <!-- Set the width -->
        <item name="android:layout_gravity">center_horizontal</item> <!-- Center it horizontally -->
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#6600BCD4</item>
    </style>

    <style name="BottomNavigationItemStyle" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">4dp</item> <!-- Adjust the space here -->
        <item name="android:paddingTop">12dp</item>
        <item name="fontFamily">@font/robotomedium</item>
    </style>

</resources>